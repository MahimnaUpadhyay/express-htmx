<li class="list-group-item d-flex justify-content-between align-items-center">
    <span>
        <%= data.task %>
    </span>
    <% if (data.isCompleted) { %>
        <span class="badge bg-success rounded-pill">Completed</span>
        <% } else { %>
            <span class="badge btn-warning rounded-pill">Pending</span>
    <% } %>
</li>